{% import '@PrestaShop/Admin/macros.html.twig' as ps %}
{% trans_default_domain 'Admin.Advparameters.Feature' %}
{% form_theme blogCategoryForm '@PrestaShop/Admin/TwigTemplateForm/prestashop_ui_kit.html.twig' %}

{% block content %}
  {{ form_start(blogCategoryForm) }}
  <div class="card">
    <h3 class="card-header">
      <i class="material-icons">
        settings
      </i>
      {{ 'Categories'|trans({}, 'Modules.Eniblog.Admin') }}
    </h3>
    <div class="card-body">
      <div class="form-wrapper">
        {{ form_widget(blogCategoryForm) }}
      </div>
    </div>
    <div class="card-footer">
      <a href="{{ path('eniblog_category_index') }}" class="btn btn-outline-secondary">
        {{ 'Cancel'|trans({}, 'Admin.Actions') }}
      </a>
      <button class="btn btn-primary float-right" id="save-button">
        {{ 'Save'|trans({}, 'Admin.Actions') }}
      </button>
    </div>
  </div>
  {{ form_end(blogCategoryForm) }}
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('../modules/eniblog/views/js/form.js') }}"></script>
{% endblock %}
